{
  "defaultSeverity": "warning",
  "extends": ["tslint-config-airbnb", "tslint:latest"],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "semicolon": [true, "always"],
    "no-bitwise": true,
    "quotemark": {
      "options": [
        "single"
      ]
    },
    "import-name": false,
    "no-increment-decrement": false,
    "prefer-template": false,
    "indent": [true, "spaces", 4],
    "ter-indent": [true, 4, { "SwitchCase": 1 } ],
    "trailing-comma": [true, {"multiline": "ignore", "singleline": "never"}],
    "space-before-function-paren": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "object-literal-sort-keys": [true, "shorthand-first"],
    "object-shorthand-properties-first": false,
    "ordered-imports": true,
    "no-submodule-imports": [true, "@", "~", "~src"],
    "no-implicit-dependencies":  [true, ["@", "~", "~src"]],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
